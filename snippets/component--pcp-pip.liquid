    <div class="bg fixed inset-0 opacity-0 z-0 pointer-events-none">
        <div class="z-20 absolute inset-0 m-auto overflow-hidden flex flex-col items-center justify-center">
            <div class="p-2 bg-white/25 rounded">
                <div data-flip-id="stage" class="stage w-[300px] h-[300px] dk:w-[600px] dk:h-[600px] w-full aspect-square">
                </div>
                {% if product != nil %}
                    <div class="product relative bg-white w-[300px] dk:w-[600px] opacity-0 p-2 flex flex-col dk:flex-row  justify-center">
                        <div class="absolute top-0 right-2">
                            {%- render "icon--close", stroke_width: 1.5 -%}
                        </div>
                        {% render 'molecule--small-product-card' product: product %}
                        <div class="dk:min-w-[200px] flex items-center [&_.mt-4]:mt-0">
                            <div class="w-[var(--btn-height)] h-[var(--btn-height)] mr-[5px] favorite-btn border-black p-4 border">
                                {%- render 'icon--heart' %}
                            </div>
                            {%- render "component--add-to-cart", product: product, variants: variant_visible, variant_picker: variant_picker, variant_index: variant_index, quantity_index: quantity_index, form_id: section.id -%}
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
        <div class="bg-off-black inset-0 opacity-50 absolute z-10"></div>
    {% endif %}
    </div>

