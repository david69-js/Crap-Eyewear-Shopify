{%- endcomment -%}
{%- liquid

assign id = id | default: ""
assign icon = icon | default: ""
assign stroke = stroke | default: 0
assign strokeColor = strokeColor | default: "currentColor"
assign fillColor = fillColor | default: "currentColor"

# Our svg UI defaults
assign svgParams = 'xmlns="http://www.w3.org/2000/svg" aria-hidden="true" focusable="false" role="presentation" fill="none"'
-%}
{%- case icon -%}
	{%- when "account" -%}
		<svg {{ svgParams }} {%- if id != blank %} id="{{- id -}}" {% endif -%} class="icon icon-{{- icon -}}" viewBox="0 0 18 19"><title>Account</title><path d="M6 4.5a3 3 0 116 0 3 3 0 01-6 0zm3-4a4 4 0 100 8 4 4 0 000-8zm5.58 12.15c1.12.82 1.83 2.24 1.91 4.85H1.51c.08-2.6.79-4.03 1.9-4.85C4.66 11.75 6.5 11.5 9 11.5s4.35.26 5.58 1.15zM9 10.5c-2.5 0-4.65.24-6.17 1.35C1.27 12.98.5 14.93.5 18v.5h17V18c0-3.07-.77-5.02-2.33-6.15-1.52-1.1-3.67-1.35-6.17-1.35z" fill-rule="evenodd" clip-rule="evenodd" fill="{{- fillColor -}}" stroke="{{- strokeColor -}}" strokeWidth="{{- stroke -}}" /></svg>

	{%- when "arrow" -%}
		<svg {{ svgParams }} {%- if id != blank %} id="{{- id -}}" {% endif -%} class="icon icon-{{- icon -}}" viewBox="0 0 14 10"><title>Arrow</title><path d="M8.537.808a.5.5 0 01.817-.162l4 4a.5.5 0 010 .708l-4 4a.5.5 0 11-.708-.708L11.793 5.5H1a.5.5 0 010-1h10.793L8.646 1.354a.5.5 0 01-.109-.546z" fill-rule="evenodd" clip-rule="evenodd" fill="{{- fillColor -}}" stroke="{{- strokeColor -}}" strokeWidth="{{- stroke -}}" /></svg>

	{%- when "caret" -%}
		<svg {{ svgParams }} {%- if id != blank %} id="{{- id -}}" {% endif -%} class="icon icon-{{- icon -}}" viewBox="0 0 10 6"><title>Caret</title><path fill-rule="evenodd" clip-rule="evenodd" d="M9.354.646a.5.5 0 00-.708 0L5 4.293 1.354.646a.5.5 0 00-.708.708l4 4a.5.5 0 00.708 0l4-4a.5.5 0 000-.708z" fill="currentColor" stroke="currentColor" stroke-width="{{ stroke_width }}" /></svg>

	{%- when "cart" -%}
		{%- render "icon--cart", stroke_width: stroke -%}

	{%- when "close" -%}
		{%- render "icon--close", stroke_width: stroke -%}

	{%- when "error" -%}
		{%- render "icon--error", stroke_width: stroke -%}

	{%- when "filter" -%}
		{%- render "icon--filter", stroke_width: stroke -%}

	{%- when "minus" -%}
		{%- render "icon--minus", stroke_width: stroke -%}

	{%- when "pin-drop" -%}
		<svg {{ svgParams }} {%- if id != blank %} id="{{- id -}}" {% endif -%} class="icon icon-{{- icon -}}" viewBox="0 0 8 10"><title>Pin</title><path d="M4 4.875C4.24167 4.875 4.44792 4.78958 4.61875 4.61875C4.78958 4.44792 4.875 4.24167 4.875 4C4.875 3.75833 4.78958 3.55208 4.61875 3.38125C4.44792 3.21042 4.24167 3.125 4 3.125C3.75833 3.125 3.55208 3.21042 3.38125 3.38125C3.21042 3.55208 3.125 3.75833 3.125 4C3.125 4.24167 3.21042 4.44792 3.38125 4.61875C3.55208 4.78958 3.75833 4.875 4 4.875ZM4 10C2.65833 8.85833 1.65625 7.79792 0.99375 6.81875C0.33125 5.83958 0 4.93333 0 4.1C0 2.85 0.402083 1.85417 1.20625 1.1125C2.01042 0.370833 2.94167 0 4 0C5.05833 0 5.98958 0.370833 6.79375 1.1125C7.59792 1.85417 8 2.85 8 4.1C8 4.93333 7.66875 5.83958 7.00625 6.81875C6.34375 7.79792 5.34167 8.85833 4 10Z" fill="{{- fillColor -}}" stroke="{{- strokeColor -}}" stroke-width="{{- stroke -}}" /></svg>

	{%- when "plus" -%}
		<svg {{ svgParams }} {%- if id != blank %} id="{{- id -}}" {% endif -%} class="icon icon-{{- icon -}}" viewBox="0 0 10 10"><title>Plus</title><path d="M1 4.51a.5.5 0 000 1h3.5l.01 3.5a.5.5 0 001-.01V5.5l3.5-.01a.5.5 0 00-.01-1H5.5L5.49.99a.5.5 0 00-1 .01v3.5l-3.5.01H1z" fill="{{- fillColor -}}" stroke="{{- strokeColor -}}" stroke-width="{{- stroke -}}" /></svg>

	{%- when "search" -%}
		{%- render "icon--search", stroke_width: stroke -%}

	{%- when "success" -%}
		{%- render "icon--success", stroke_width: stroke -%}

{%- endcase -%}
