.product__description,
h2,
.section__content__text {
  font-family: Courier,Courier New,Lucida Sans Typewriter,Lucida Typewriter,monospace;
}

p {
  font-size: .8rem;
  font-family: Courier,Courier New,Lucida Sans Typewriter,Lucida Typewriter,monospace;
}


.logo__image--medium {
  opacity: 0;
}

.page--logo-main .main .logo {
  background-image: url({{ 'logo_v2.svg' | asset_url }});
  background-position: center;
  background-size: contain;
  background-repeat: no-repeat;
}

.field__input {
  border-radius: 0;
}

button.btn {
  background: #000;
  color: #fff;
  font-family: Helvetica,Arial,sans-serif;
  font-size: 14px;
  letter-spacing: 1px;
  font-weight: 900;
  padding: 10px 30px;
  border: 2px solid #000;
  border-radius: 0;
}

button.btn--disabled {
  border: 0;
}

.wrap {
  background: transparent;
}
