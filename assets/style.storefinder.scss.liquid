/* SCSS
---------------------------------------------------------*/
* {
  box-sizing: border-box;
}
.srt {
  border: 0;
  clip: rect(0 0 0 0);
  height: 1px;
  margin: -1px;
  overflow: hidden;
  padding: 0;
  position: absolute;
  width: 1px;
}
@mixin img-replace($img, $w, $h, $disp: block) {
  background-image: url('#{$img}');
  background-repeat: no-repeat;
  width: $w;
  height: $h;
  display: $disp;
}
%clearfix {
  &:after {
    content: "";
    display: table;
    clear: both;
  }
}
.clear {
  clear: both;
}
a {
  text-decoration: none;
}
