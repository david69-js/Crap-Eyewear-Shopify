/* Utilities
–––––––––––––––––––––––––––––––––––––––––––––––––– */
.u-full-width {
  width: 100%;
  box-sizing: border-box;
  padding: 0;
}
.u-max-full-width {
  max-width: 100%;
  box-sizing: border-box;
}
.u-pull-right {
  float: right;
}
.u-pull-left {
  float: left;
}
.u-text-pull-right {
  text-align: right;
}
/* Show and hide elements on ss-small screens and ls-large screens */
.u-ss {
  display: block;
}
.u-ls,
.not-mobile {
  display: none;
}
.u-hide {
  display: none;
}
/* Center */
.u-center {
  text-align: center;
}
/* Remove margin from firt column */
.u-first {
  margin-left: 0;
}
/* Larger than phablet (also point when grid becomes active) */
@media (min-width: 768px) {
  .u-ss {
    display: none;
  }
  .u-ls {
    display: block;
  }
  .not-mobile {
    display: inline-block;
  }
  td.u-ls,
  th.u-ls {
    display: table-cell;
  }
