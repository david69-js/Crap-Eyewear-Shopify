        {% when 'multi_menu' %}
        {%- assign footer_linklist = block.settings.footer_linklist -%}
        {%- assign footer_linklist1 = block.settings.footer_linklist1 -%}
        {%- assign footer_linklist2 = block.settings.footer_linklist2 -%}
