      {
        "type": "textarea",
        "id": "text",
        "label": "Text",
        "default": "Pair large text with an image to give focus to your chosen product, collection, or blog post. Add details on availability, style, or even provide a review."
      },
      {
        "type": "text",
        "id": "max_width",
        "label": "Max width"
      },
      {
        "type": "select",
        "id": "text_align",
        "label": "Text Alignment",
        "options": [
          {
            "value": "text-center",
            "label": "Center"
          },
          {
            "value": "text-left",
            "label": "Left"
          },
          {
            "value": "text-right",
            "label": "Right"
          }
        ]
      },
      {
        "type": "text",
        "id": "padding",
        "label": "Padding"
      },
      {
        "type": "image_picker",
        "id": "pattern_image",
        "label": "Pattern Image",
		"info": "Will override background color"
      },
      {
        "type": "color",
        "id": "bg_color",
        "label": "Background color"
      },
      {
        "type": "checkbox",
        "id": "bg_color_remove",
        "label": "Remove background color mobile"
      },
      {
        "type": "color",
        "id": "color",
        "label": "Text color"
      },
      {
        "type": "color",
        "id": "color_mobile",
        "label": "Text color - mobile"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      },
      {
        "type": "text",
        "id": "button_label2",
        "label": "Button label 2"
      },
      {
        "type": "url",
        "id": "button_link2",
        "label": "Button link 2"
      },
      {
        "type": "color",
        "id": "button_color",
        "label": "Button text color"
      },
      {
        "type": "color",
        "id": "button_bg_color",
        "label": "Button background color"
      },
      {
        "type": "color",
        "id": "button_bg_color_border",
        "label": "Button hover border color",
		"default": "#000"
      },
      {
        "type": "color",
        "id": "button_hover_bg_color",
        "label": "Button hover background color",
		"default": "#fff"
      },
      {
        "type": "color",
        "id": "button_hover_color",
        "label": "Button hover text color",
		"default": "#000"
      }
    ],
    "presets": [
      {
        "name": "Hero - split",
        "category": "Image"
      }
    ]
  }
{% endschema %}