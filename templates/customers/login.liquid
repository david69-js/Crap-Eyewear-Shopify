<section class="accounts">

<!-- START HEADER -->
<div id="header-view">
    <div class="container">
        <h2>Login</h2>
    </div>
</div>
<!-- END HEADER -->

<!-- START LOGIN -->
<div id="login">
    <div class="container">
        <div class="six columns offset-by-three">
            <div id="customer">
            {% form 'customer_login' %}
                <div class="error">{{ form.errors | default_errors }}</div>
                <div id="login_email" class="clearfix">
                    <label for="customer_email" class="login">Email Address</label>
                    <input type="email" value="" name="customer[email]" id="customer_email" />
                </div>
                {% if form.password_needed %}
                <div id="login_password" class="clearfix">
                    <label for="customer_password">Password</label>
                    <input type="password" value="" name="customer[password]" />
                    <p class="forgot-password"><a href="/account/register">Don't have an account? register here</a> or <a href="#" onclick="showRecoverPasswordForm();return false;" class="note">Forgot your password?</a></p>
                </div>
                {% endif %}
                <div class="actions">
                    <input type="submit" class="button button-primary" value="Sign In" />
                        <span class="rte">&nbsp; or <a href="{{ shop.url }}">Return to Store</a></span>
                </div>
            {% endform %}
            </div>
            <div id="recover-password" style='display:none'>
            <p>We will send you an email to reset your password.</p>
            {% form 'recover_customer_password' %}
                <div class="error">{{ form.errors | default_errors }}</div>
                <div id="recover_email" class="clearfix">
                    <label for="email" class="large">Email</label>
                    <input type="email" value="" size="30" name="email" id="recover-email" />
                </div>
                 <div class="actions">
                     <input type="submit" class="button button-primary" value="Submit" />
                     <span class="rte">&nbsp; or <a href="#" onclick="hideRecoverPasswordForm();return false;">Cancel</a></span>
                    </div>
            {% endform %}
            </div>
        </div>
    </div>
</div>
<!-- END LOGIN -->

</section>

<script type="text/javascript">
  function showRecoverPasswordForm() {
    document.getElementById('recover-password').style.display = 'block';
    document.getElementById('customer').style.display='none';
  }

  function hideRecoverPasswordForm() {
    document.getElementById('recover-password').style.display = 'none';
    document.getElementById('customer').style.display = 'block';
  }

  if (window.location.hash == '#recover') { showRecoverPasswordForm() }
</script>


