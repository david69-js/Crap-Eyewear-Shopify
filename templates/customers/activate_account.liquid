<section class="accounts">
<!-- START HEADER -->
<div id="header-view">
    <div class="container">
        <h1>Activate Account</h1>
    </div>
</div>
<!-- END HEADER -->

<!-- START LOGIN -->
<div id="login">
    <div class="container">
        <div class="six columns offset-by-three">
            <p class="note create-password">Create your password to activate your account</p>
            {% form 'activate_customer_password' %}
            <div class="error">{{ form.errors | default_errors }}</div>
            <label class="label" for="password">Password</label>
            <input type="password" value="" name="customer[password]" id="customer_password" class="field" />
            <label class="label" for="password_confirmation">Password Confirmation</label>
            <input type="password" value="" name="customer[password_confirmation]" id="customer_password_confirmation" class="field" />
            <div class="actions">
                <input class="button button-primary" type="submit" value="Activate Account" />
                <span class="rte">&nbsp; or <a href="/">Decline Invitation</a></span>
            </div>
            {% endform %}
        </div>
    </div>
</div>
<!-- END LOGIN -->
</section>

